<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp">
        
        <TextView
        	style="@android:style/TextAppearance.Small"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:text="Type"
        	/>
        	
        <Spinner
        	android:id="@+id/folder_type"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:prompt="@string/folder_type_prompt"
        	/>
        	
        <TextView
        	style="@android:style/TextAppearance.Small"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:text="Local Path"
        	/>
        <EditText
        	android:id="@+id/folder_local_path"
        	android:singleLine="true"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:hint="Local Path"
        	/>
        	
        <TextView
        	style="@android:style/TextAppearance.Small"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:text="Remote Path"
        	/>
        <EditText
        	android:id="@+id/folder_remote_path"
        	android:singleLine="true"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:hint="Remote Path"
        	/>

</LinearLayout>
